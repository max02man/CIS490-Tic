<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hawsawi02.alaa.tic.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A3"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:layout_alignBaseline="@+id/A2"
        android:layout_alignBottom="@+id/A2"
        android:layout_toEndOf="@+id/A2"
        android:background="#ff0000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/B2"
        android:layout_alignStart="@+id/B2"
        android:layout_marginBottom="11dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A1"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginRight="10dp"
        android:layout_marginStart="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/A2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B2"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/B3"
        android:layout_alignBottom="@+id/B3"
        android:layout_toEndOf="@+id/B1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B1"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/B2"
        android:layout_alignBottom="@+id/B2"
        android:layout_alignStart="@+id/A1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B3"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/C3"
        android:layout_toEndOf="@+id/B2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C1"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/B1"
        android:layout_marginBottom="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C2"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/C1"
        android:layout_alignBottom="@+id/C1"
        android:layout_toEndOf="@+id/C1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C3"
        android:minWidth="70dp"
        android:minHeight="70dp"
        android:background="#ff0000"
        android:layout_alignBaseline="@+id/C2"
        android:layout_alignBottom="@+id/C2"
        android:layout_toEndOf="@+id/C2" />

    <Button
        android:text="New Game"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/Rest"
        android:layout_marginEnd="41dp"
        android:layout_below="@+id/winner_box"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/winner_box"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/turn"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:textSize="32sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="200dp"
        android:layout_alignBottom="@+id/A3"
        android:layout_toEndOf="@+id/A3"
        android:layout_marginStart="31dp"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/winner_box"
        android:layout_height="80dp"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:textSize="32dp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:layout_width="100dp"
        android:layout_above="@+id/C3"
        android:layout_alignEnd="@+id/turn"
        android:layout_alignStart="@+id/turn" />

</RelativeLayout>
